{
	"name": "vscode-trilogy-tools",
	"description": "trilogy language server client",
	"author": "N/A",
	"repository": "https://github.com/trilogydata/trilogy-language-server",
	"license": "MIT",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
				"id": "trilogy",
				"aliases": [
					"trilogy"
				],
				"extensions": [
					".preql"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "trilogy",
				"scopeName": "source.trilogy",
				"path": "./syntaxes/trilogy.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "trilogy.runQuery",
				"title": "Run a query against a local DuckDB",
				"category": "Trilogy Query"
			}
		],
		"configuration": {
			"type": "object",
			"title": "trilogy Language Server Configuration",
            "properties": {
				"trilogyLanguageServer.someConfig": {
					"scope": "resource",
					"type": "string",
					"default": "some default."
				}
            }
        },
        "customEditors": [
        ]
	},
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint \"src/**/*.ts\"",
		"package": "vsce package --out trilogy_tools.vsix"
	},
	"dependencies": {
		"duckdb": "^1.0.0",
		"vscode-languageclient": "^6.1.3"
	},
	"devDependencies": {
		"@types/node": "^18",
		"@types/vscode": "^1.73.0",
		"@types/vscode-webview": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^7.14.0",
		"@typescript-eslint/parser": "^7.14.0",
		"eslint": "^8.57.0",
		"typescript": "^5.5.2"
	}
}
